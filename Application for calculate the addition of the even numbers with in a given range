import java.util.Scanner;
public class EvenNumbersCalculate{
  public static void main(String args []){
      
 // Variable declaration + itiialization
        int numbers = 50;	
	int number1;
	int number2;
        int total;
        
    System.out.println("======Enter two numbers between 0 to 50 ============");

    for(int i=0; i<=numbers; ++i){
        
          //Scanner objeect for inputs
       Scanner read = new Scanner(System.in);

         System.out.println("Enter a First Number :");
            number1 = read.nextInt(); 

	 System.out.println("Enter a Second Number :");
            number2 = read.nextInt(); 
             
             // calculate total 
           total = number1 + number2;
           
            if( total % 2 ==0){
               System.out.println("Total Number is a Even Number.");
               }else
                 {
                System.out.println("Total Number is a Odd Number." );
                 }
  }
 }
}
